<section class='Program_Select'>
  <% if request.query_string.include?('MIX-MACHINE') %>
    <%= image_tag(@image_url) %>

    <%= form_with(url: program_selects_path, class: 'Piston2438', method: :post, local: true) do |form| %>
      <p class='Piston2438--Select_Text'>
        <%= form.radio_button(:play_method, '全曲シャッフル再生') %>
        全曲シャッフル再生
      </p>

      <p class='Piston2438--Select_Text'>
        <%= form.radio_button(:play_method, '期間指定') %> 放送日を指定して再生<br />
          <%= form.date_select(:start_date, use_month_numbers: true, use_two_digit_numbers: true, date_separator: '-', start_year: 2020, end_year: 2021, discard_day: true) %>〜
          <%= form.date_select(:end_date, use_month_numbers: true, use_two_digit_numbers: true, date_separator: '-', start_year: 2020, end_year: 2021, discard_day: true) %>
      </p>

      <%= form.submit('再生開始', class: 'Piston2438--Submit') %>
    <% end %>
  <% else %>
    <h1 class='Program_Select--Title'>① 番組を選択してください。</h1>
    <%= link_to('MIX MACHINE From. GROOVE LINE', program_selects_path(p: 'JOAV_MIX-MACHINE'), class: 'Program_Select--Link') %>
  <% end %>
</section>










