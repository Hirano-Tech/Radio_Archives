  <section class='Date_Select'>
    <%= image_tag(@image_url) %>

    <h1 class='Date_Select--Title'>② 放送日を選択してください。</h1>
    <%= form_with(url: program_selects_path, method: :post, local: true) do |form| %>
      <p class='Date_Select__Box'>
        <% @programs.each do |program| %>
          <%= form.radio_button(:broadcast_date, program.id) %>
          <%= program.on_air.strftime('%Y年 %m月 %d日') %> 放送分
          <% if program.already_play == 1 %>
            <span class='Date_Select__Box--Badge'>再生済</span>
          <% end %><br />
        <% end %>
      </p>

      <%= form.submit('再生を開始する。', class: 'Date_Select--Submit') %>
    <% end %>
